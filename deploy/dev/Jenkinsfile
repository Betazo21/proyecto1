pipeline {
    agent any

    tools {
        jdk 'java11'
    }
    
    environment {
        JAVA_HOME = tool 'Java'
        PATH = "$JAVA_HOME/bin:${env.PATH}"
    }
    
    stages {
            stage('Which Java?') {
                steps {
                    env.JAVA_HOME =
                    sh 'java --version'
                }
            }
             stage('Compile') {
            steps {
                // Compilar la aplicación utilizando Maven
                sh 'mvn clean compile'
            }
        }
        
        stage('Package') {
            steps {
                // Empaquetar la aplicación en un archivo JAR
                sh 'mvn package'
            }
        }
    }
}
