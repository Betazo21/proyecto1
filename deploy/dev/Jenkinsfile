pipeline {
    agent any

    tools {
        jdk 'java11'
        maven 'maven386'
    }
    
    environment {
        PATH = "/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
    }
    
    stages {
            stage('Which Java?') {
                steps {
                    sh "echo $JAVA_HOME"
                    sh "echo $M2_HOME"
                    sh "echo $PATH"
                    sh 'java --version'
                }
            }
             stage('Compile') {
            steps {
                // Compilar la aplicación utilizando Maven
                sh 'mvn clean compile'
            }
        }
        
        stage('Package') {
            steps {
                // Empaquetar la aplicación en un archivo JAR
                sh 'mvn package'
            }
        }
    }
}
