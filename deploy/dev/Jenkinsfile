pipeline {
    agent any
    
    tools {
        jdk 'java11'
        maven 'maven392'
    }
    
    stages {
            stage('Which Java?') {
                steps {
                    sh 'java --version'
                }
            }
            stage ('Build') {
                steps {
                    env.JAVA_HOME="${tool 'java11'}"
                    sh "mvn clean verify"
                }    
            }
    }
}