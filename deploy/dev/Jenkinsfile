pipeline {
    agent any
    
    tools {
        jdk 'JAVA11'
        maven 'mv392'
    }

    environment{
        REGISTRYLOCATION = "https://www.google.com/"
    }
    
    stages {
            stage('Initialize'){
                steps{
                    script{
                        env.PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
                    }
                }
            }
            stage('Which Java?') {
                steps {
                    script{
                        env.JAVA_HOME="${tool 'JAVA11'}"
                        env.PATH="${env.JAVA_HOME}/bin:${env.PATH}"
                        sh 'java --version'
                    }
                }
            }
            stage ('Build') {
                steps {
                    script{
                        env.M2_HOME="${tool 'mv392'}"
                        env.PATH="${env.JAVA_HOME}/bin:${env.PATH}"
                        sh "echo $JAVA_HOME"
                        sh "echo $M2_HOME"
                        sh "echo $PATH"
                        sh "mvn -version"
                    }
                }    
            }
    }
}