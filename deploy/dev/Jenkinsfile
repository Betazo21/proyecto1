pipeline {
    agent any
    
    tools {
        jdk 'JAVA11'
        maven 'mv392'
    }

    environment{
        REGISTRYLOCATION = "https://www.google.com/"
    }
    
    stages {
           stage('Initialize'){
            steps{
                script{
                        echo "Inicializando"
                        sh 'java --version'
                        sh "mvn -version"
                    }
                }
             }   
            stage ('Build - Service Usuarios') {
                steps {
                    script{
                       dir("services/service-usuarios/"){
                        sh "mvn package"
                        sh "ls target"
                        DockerBuildAndPush("serviceclientes")
                       }
                    }
                }    
            }
    }
}

def DockerBuildAndPush(entity){
    sh "docker build -f 'Dockerfile' -t lgracia/dev:${entity} . --no-cache --network host"
    sh "docker push lgracia/dev:${entity}"

}