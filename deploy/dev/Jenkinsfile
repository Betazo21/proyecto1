pipeline {
    agent any
    
    tools {
        jdk 'JAVA11'
        maven 'mv392'
    }

    environment{
        REGISTRYLOCATION = "https://www.google.com/"
    }
    
    stages {
            stage('Which Java?') {
                steps {
                    script{
                        env.JAVA_HOME="/opt/java/openjdk"
                        env.PATH="${env.JAVA_HOME}/bin:${env.PATH}"
                        sh 'java --version'
                    }
                }
            }
            stage ('Build') {
                steps {
                    script{
                        env.JAVA_HOME="/opt/java/openjdk"
                        env.PATH="${env.JAVA_HOME}/bin:${env.PATH}"
                        //env.M2_HOME="${tool 'mv392'}"
                        //env.PATH="${env.M2_HOME}/bin:${env.PATH}"
                        sh "echo $M2_HOME"
                        sh "mvn -version"
                    }
                }    
            }
    }
}