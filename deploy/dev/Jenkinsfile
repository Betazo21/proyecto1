pipeline {
    agent any
    
   

    environment{
        REGISTRYLOCATION = "https://www.google.com/"
        JAVA_HOME="/opt/java/openjdk"
        env.PATH="${env.JAVA_HOME}/bin:${env.PATH}"
        M2_HOME="/opt/apache-maven-3.9.2"
        env.PATH="${env.M2_HOME}/bin:${env.PATH}"
    }
    
    stages {
            stage('Which Java?') {
                steps {
                    script{
                        sh 'java --version'
                    }
                }
            }
            stage ('Build') {
                steps {
                    script{
                        sh "echo $M2_HOME"
                        sh "mvn -version"


                    }
                }    
            }
    }
}